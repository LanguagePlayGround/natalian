<code>
[hendry@server tmp]$ cat attacks.sh
TEMPFILE=`mktemp`
sudo cat /var/log/secure* | grep Failed > $TEMPFILE
for i in `seq 1 30`
do
DAY="Jun $i"
echo -n $DAY :
egrep "$DAY" $TEMPFILE | wc -l
done
wc -l $TEMPFILE
